#!/usr/bin/env bash
#Install and configure HAproxy on your lb-01 server.

sudo apt update -y
sudo apt install haproxy -y
sudo su
echo "frontend my_app_front
    bind *:80
    mode http
    default_backend my_app_back

backend  my_app_back
    balance roundrobin
    server 2321-web-01  18.205.60.58:80 check
    server 2321-web-02  18.205.56.71:80 check" >> /etc/haproxy/haproxy.cf
sudo service haproxy start
